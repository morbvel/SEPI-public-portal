<div class="row" style="padding:0px; margin: 0px;">
	<div class="module-contacto-newsletter">
		<div class="container">
			<div class="row">

        <div class="col-sm-6 newsletter">

          <div class="icon-text">
						<img src="/sites/default/files/2017-09/sala-prensa-icon-mail.png" alt="">
						<h3 class="contact-subtitle">
							{% trans %}Newsletter{% endtrans %}
						</h3>
						<p class="default-text">
							{% trans %}Desde aquí puedes suscribirte o cancelar la suscripción de nuestros boletines{% endtrans %}
						</p>
					</div>

          <div class="form-newsletter">
						<div>
              <label class="hidden" aria-hidden="true" for="form_id">Hidden formulario id</label><input type="hidden" name="form_id" value="{{form['#form_id']}}" />
							<div class="form-group">
								<label class="sr-only">{% trans %}Email{% endtrans %}</label>
								<label class="hidden" aria-hidden="true" for="mail[0][value]">Hidden mail</label><input data-drupal-selector="edit-mail-1-value" type="email" name="mail[0][value]" class="form-control" id="edit-mail-1-value" placeholder="{% trans %}Escribe aquí tu email{% endtrans %}" required>
							</div>

							<div class="form-group ">
								<div class="form-check">
									<label class="form-check-label ">
										<label class="hidden" aria-hidden="true" for="terminos">Hidden términos</label><input class="form-check-input centered-content " type="checkbox" name="terminos" required> <a href="/aviso-legal" class="footer-checkbox" id="clausula-newsletter-block">{% trans %}Acepto los términos y condiciones de uso{% endtrans %}</a>
									</label>
								</div>
							</div>

							<div class="btn-subscribirse">
								<div class="form-group">
								<button type="submit" class="btn btn-alt" id="subs-content">{% trans %}Suscribir{% endtrans %}</button>
								</div>
							</div>
							<div class="btn-subscribirse">
								<div class="form-group">
								<button type="submit" class="btn btn-alt" id="cancel-content">{% trans %}Darse de baja{% endtrans %}</button>
								</div>
							</div>

						</div>
					</div>

        </div>

				<div class="col-sm-6 contacto">
					<div class="icon-text">
						<img src="/sites/default/files/2017-09/sala-prensa-icon-chat.png" alt="">
						<h3 class="contact-subtitle">
							{% trans %}Contacto{% endtrans %}
						</h3>
						<p class="default-text">
							{% trans %}Puedes escribirnos un mail. Te contestaremos a la mayor brevedad posible.{% endtrans %}

						</p>
						<div class="btn-subscribirse">
								<div class="form-group">
									<!-- <button type="submit" class="btn btn-alt">Contactar</button>-->
									<a href="contacto" class="btn btn-alt" id="enlace-contacto-sala-de-prensa">{% trans %}Contactar{% endtrans %}</a>
								</div>
						</div>
					</div>
				</div>

			</div>
		</div>
	</div>
</div>
