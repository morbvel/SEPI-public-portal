<div class="row row-sin-margenes">
  <div class="module module-news-form module-buscador">
    <div class="container">
      <div class="form-inline col-xs-12">
			  <div class="row fila-buscador-noticias-englobe">

          <div class="form-group col-xs-12 col-sm-6 col-md-3 empresa-selector">
  					<label class="buscador_label" id="edit-field-empresa-target-id--description" for="edit-field-empresa-target-id">{% trans %}Empresa{% endtrans %}</label>
            {{form.field_empresa_target_id}}

          </div>

          <div class="form-group col-xs-12 col-sm-6  col-md-5 date fechas-noticas-buscador">
