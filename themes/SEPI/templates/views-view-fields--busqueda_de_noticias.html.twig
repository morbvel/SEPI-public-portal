<div class="new-item">
  <a href="{{fields.path.content}}">
    <div class="row">
        {% set aux = fields.field_imagen_distributiva.content|split('.') %}
        {% if aux[1] == 'jpg' or aux[1] == 'jpeg' or aux[1] == 'png' or aux[1] == 'gif' %}
          <div class="image-resizer new-image col-xs-12 col-sm-4 zoom">
            <img src="{{fields.field_imagen_distributiva.content}}" alt="{{ fields.title.content }}">
          </div>
          <div class="new-text col-xs-12  col-sm-8">
        {% else %}
          <div class="new-text col-xs-12  col-sm-12 new-item-no-image">
        {% endif %}
          <h3 class="new-headline">{{fields.title.content}}</h3>
          <div class="new-excerpt">
            {{fields.field_resumen_noticia.content}}
          </div>
          {% if idioma != 'en' %}
          <p class="new-date">{{fields.created.content|date('d')}} {% trans %}DE{% endtrans %} {{fields.created.content|date("F")|replace({
      'January'  : 'Enero',
      'February'  : 'Febrero',
      'March'  : 'Marzo',
      'April'  : 'Abril',
      'May'  : 'Mayo',
      'June'  : 'Junio',
      'July'  : 'Julio',
      'August'  : 'Agosto',
      'September'  : 'Septiembre',
      'October'   : 'Octubre',
      'November'  : 'Noviembre',
      'December' : 'Diciembre',
      })}} {% trans %}DE{% endtrans %} {{fields.created.content|date("Y")}}</p>
          {% else %}
            <p class="new-date">{{fields.created.content|date("Y")}} {{fields.created.content|date("F")}} {{fields.created.content|date('d')}}</p>
          {% endif %}
        </div>

    </div>
  </a>
</div>
